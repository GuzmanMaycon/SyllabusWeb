<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- Credenciales Gmail -->
  <bean id="gmailMailer"
        class="com.junior.mailer.MailGmailSender">
    <property name="from" value="test@example"/>
    <property name="username" value="username"/>
    <property name="password" value="password"/>
  </bean>

  <!-- Credenciales SendGrid -->
  <bean id="sendGridMailer"
        class="com.junior.mailer.MailSendGridSender">
    <property name="apiKey" value="api_key"/>
    <property name="from" value="test@example.com"/>
  </bean>

</beans>
